@model BookStore.Domain.Entities.Book

<div data-role="collapsible" data-collapsed="false" data-content-theme="c">
    <h2>@Model.Name</h2>
    <div>
        <div>
            @Model.Author
        </div>
        <div>
            <strong>(@Model.Price.ToString("# Сум"))</strong>
        </div>
        <div>
            @using (Html.BeginForm("AddToPurchase", "Purchase"))
            {
                @Html.HiddenFor(x => x.BookId)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" value="В корзину" />
            }
        </div>
    </div>
</div>
