@model BookStore.WebUI.Models.PurchaseIndexViewModel

@{
    ViewBag.Title = "BookStore: ваша корзина";
}

<style>
    #purchaseTable td {
        vertical-align: middle;
    }
</style>

<h2>Ваша корзина</h2>
<table id="purchaseTable" class="table">
    <thead>
        <tr>
            <th>Кол-во</th>
            <th>Книга</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Purchase.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Book.Name</td>
                <td class="text-right">@line.Book.Price.ToString("# Сум")</td>
                <td class="text-right">
                    @((line.Quantity * line.Book.Price).ToString("# Сум"))
                </td>
            </tr>
        <td>
            @using (Html.BeginForm("RemoveFromPurchase", "Purchase"))
            {
                @Html.Hidden("BookId", line.Book.BookId)
                @Html.HiddenFor(x => x.ReturnUrl)
                <input class="btn btn-sm btn-warning" type="submit" value="Удалить" />
            }
        </td>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого:</td>
            <td class="text-right">
                @Model.Purchase.ComputeTotalValue().ToString("# Сум")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>
    @Html.ActionLink("Оформить заказ", "Checkout", null, new { @class = "btn btn-primary" })
</div>
